#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/mongodb/helpers/ctl_setup.sh 'mongodb'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    /var/vcap/packages/mongodb/bin/mongod --dbpath /var/vcap/data >>$LOG_DIR/$JOB_NAME.stdout.log 2>>$LOG_DIR/$JOB_NAME.stderr.log &
	PID = $!
	
	# Wait for Mongo to pre-allocate journal files
	while :
	do
		if grep -q "waiting for connections" $LOG_DIR/$JOB_NAME.stdout.log; then
			echo $PID > $PIDFILE
			break
		fi
	done
	
    
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: mongodb_ctl {start|stop}"

    ;;

esac
exit 0